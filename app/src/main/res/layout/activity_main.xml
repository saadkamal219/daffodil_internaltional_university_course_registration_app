<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/daffodil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daffodil International University"
        android:textSize="70px"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#194C06"
        android:textStyle="bold"
        android:layout_marginTop="40px"
        android:layout_marginBottom="30px"
        />

    <TextView
        android:id="@+id/registertitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Offered Courses"
        android:textSize="80px"
        android:textStyle="bold"
        android:layout_margin="20px"
        android:textAlignment="center"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/registertitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For"
        android:textSize="60px"
        android:textStyle="bold"
        android:layout_margin="0px"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/registertitle3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spring 2024"
        android:textSize="80px"
        android:textStyle="bold"
        android:layout_margin="20px"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <CheckBox
        android:id="@+id/course1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:text="CSE336: Software Project VI"
        android:textSize="55px"
        android:textStyle="italic"
        />

    <CheckBox
        android:id="@+id/course2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:text="CSE334: Pervasive Computing"
        android:textSize="55px"
        android:textStyle="italic"
        />
    <CheckBox
    android:id="@+id/course3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="80px"
    android:text="CSE335: Mobile App Dev. Lab"
    android:textSize="55px"
    android:textStyle="italic"
    />
    <CheckBox
        android:id="@+id/course4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:text="CSE331: Compiler Design"
        android:textSize="55px"
        android:textStyle="italic"
        />
    <CheckBox
        android:id="@+id/course5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:text="CSE332: Compiler Design Lab"
        android:textSize="55px"
        android:textStyle="italic"
        />
    <CheckBox
        android:id="@+id/course6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:text="CSE333: Software Engineering"
        android:textSize="55px"
        android:textStyle="italic"
        />
    <CheckBox
        android:id="@+id/course7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:text="CSE413: Big Data and IoT"
        android:textSize="55px"
        android:textStyle="italic"
        />

    <CheckBox
        android:id="@+id/course8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:text="CSE413: Big Data and IoT Lab"
        android:textSize="55px"
        android:textStyle="italic"
        />

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Registration"
        android:textColor="#FFFFFF"
        android:backgroundTint="#576A64"
        android:textSize="60px"
        android:textStyle="bold"
        android:layout_margin="40px"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60px"
        android:layout_margin="30px"
        />

</LinearLayout>